{
    "name": "carllee1983/ecpay-logistics",
    "description": "綠界科技物流整合 PHP SDK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Carl Lee",
            "email": "carllee1983@gmail.com"
        }
    ],
    "keywords": [
        "ecpay",
        "logistics",
        "taiwan",
        "shipping",
        "cvs",
        "convenience-store",
        "7-eleven",
        "family-mart",
        "hilife",
        "okmart",
        "tcat",
        "post"
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "squizlabs/php_codesniffer": "^3.7",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "CarlLee\\EcPayLogistics\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CarlLee\\EcPayLogistics\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CarlLee\\EcPayLogistics\\Laravel\\EcPayLogisticsServiceProvider"
            ],
            "aliases": {
                "EcPayLogistics": "CarlLee\\EcPayLogistics\\Laravel\\Facades\\EcPayLogistics"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

